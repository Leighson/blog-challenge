<%- include('partials/header'); -%>

<body>
    <div class="container">

        <% posts.forEach( (post, i) => { %>
            <h2><%= post.title %></h2>
            <% if (post.content.length > 100 && i != 0) { %>
                <p><%= post.content.substring(0,100).trim() %>... <a href='/posts/<%= post.titleRequest %>'>Read more</a></p>
            <% } else { %>
                <p><%= post.content %></p>
            <% } %>
        <% }); %>

    </div>
    
<%- include('partials/footer'); -%>